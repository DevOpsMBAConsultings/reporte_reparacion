<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_repair_order_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <style>
                            .header-section {
                                border: 2px solid #333;
                                margin-bottom: 20px;
                            }
                            .header-row {
                                display: flex;
                                align-items: center;
                            }
                            .header-col-left {
                                flex: 1;
                                text-align: center;
                                padding: 10px;
                            }
                            .header-col-center {
                                flex: 1;
                                background-color: #0052CC;
                                color: white;
                                text-align: center;
                                padding: 15px;
                            }
                            .header-col-center h2 {
                                margin: 0;
                                color: white;
                                font-size: 24px;
                                text-transform: uppercase;
                                font-weight: bold;
                            }
                            .header-col-right {
                                flex: 1;
                                text-align: center;
                                padding: 10px;
                            }
                            .header-section img {
                                max-height: 80px;
                            }
                            .section-title {
                                background-color: #0052CC;
                                color: white;
                                padding: 10px 15px;
                                margin-top: 20px;
                                margin-bottom: 10px;
                                font-size: 14px;
                                font-weight: bold;
                                text-transform: uppercase;
                            }
                            .section-content {
                                padding: 10px 15px;
                                border: 1px solid #ddd;
                                border-top: none;
                            }
                            .data-row {
                                display: flex;
                                margin-bottom: 8px;
                            }
                            .data-label {
                                font-weight: bold;
                                width: 150px;
                            }
                            .data-value {
                                flex: 1;
                            }
                        </style>

                        <div class="header-section">
                            <div class="header-row">
                                <div class="header-col-left">
                                    <img src="/reporte_reparacion/static/src/img/logo1.png"/>
                                </div>
                                <div class="header-col-center">
                                    <h2>Informe Técnico Taller</h2>
                                </div>
                                <div class="header-col-right">
                                    <img src="/reporte_reparacion/static/src/img/logo2.png"/>
                                </div>
                            </div>
                        </div>

                        <div class="section-title">1. DATOS GENERALES:</div>
                        <div class="section-content">
                            <div class="data-row">
                                <div class="data-label">CLIENTE:</div>
                                <div class="data-value"><span t-field="doc.partner_id.name"/></div>
                            </div>
                            <div class="data-row">
                                <div class="data-label">DIRECCIÓN:</div>
                                <div class="data-value"><span t-field="doc.partner_id.street"/></div>
                            </div>
                            <div class="data-row">
                                <div class="data-label">EMAIL:</div>
                                <div class="data-value"><span t-field="doc.partner_id.email"/></div>
                            </div>
                            <div class="data-row">
                                <div class="data-label">TELÉFONO:</div>
                                <div class="data-value"><span t-field="doc.partner_id.phone"/></div>
                            </div>
                        </div>

                        <div class="section-title">2. DATOS DEL EQUIPO:</div>
                        <div class="section-content">
                            <div class="data-row">
                                <div class="data-label">MARCA:</div>
                                <div class="data-value"><span t-field="doc.vehicle_id.brand_id.name"/></div>
                            </div>
                            <div class="data-row">
                                <div class="data-label">VIN:</div>
                                <div class="data-value"><span t-field="doc.vehicle_id.vin_sn"/></div>
                            </div>
                            <div class="data-row">
                                <div class="data-label">MODELO:</div>
                                <div class="data-value"><span t-field="doc.vehicle_id.model_id.name"/></div>
                            </div>
                            <div class="data-row">
                                <div class="data-label">PLACA:</div>
                                <div class="data-value"><span t-field="doc.vehicle_id.license_plate"/></div>
                            </div>
                        </div>

                        <div class="section-title">3. ANTECEDENTES DEL SERVICIO:</div>
                        <div class="section-content">
                            <p><span t-field="doc.antecedentes_servicio"/></p>
                        </div>

                        <div class="section-title">4. HALLAZGOS:</div>
                        <div class="section-content">
                            <p><span t-field="doc.hallazgos"/></p>
                        </div>

                        <div class="section-title">5. ACCIÓN CORRECTIVA:</div>
                        <div class="section-content">
                            <p><span t-field="doc.accion_correctiva"/></p>
                        </div>

                        <div class="section-title">6. RECOMENDACIONES:</div>
                        <div class="section-content">
                            <p><span t-field="doc.recomendaciones"/></p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
